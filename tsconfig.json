{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "./**/*.ts",
    "@types/types.d.ts"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}